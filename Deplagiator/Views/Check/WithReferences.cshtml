@model Deplagiator.Models.ReferenceSearchViewModel
@{
    ViewBag.Title = "Reference search";
}

<style>
    input[type="file"] {
        margin-top:8px;
    }
    label{
        margin-left:10px;
        margin-right:5px;
    }
</style>

<h2>@ViewBag.Title</h2>
<hr />
@using(Html.BeginForm("WithReferences", "Check", FormMethod.Post, new { enctype = "multipart/form-data" }))
{ 
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Select a document to check</h3>

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group col-md-12">
            <input type="file" name="document" />
        </div>

        <div class="form-group col-md-12">
            <h3>Enter the author's information</h3>

            @Html.LabelFor(m => m.FirstName)
            @Html.TextBoxFor(m => m.FirstName)

            @Html.LabelFor(m => m.LastName)
            @Html.TextBoxFor(m => m.LastName)

        </div>

        <div class="form-group col-md-12">
            <h3>Select the search algorithm(s)</h3>

            @Html.LabelFor(m => m.BagOfWords)
            @Html.CheckBoxFor(m => m.BagOfWords)

            @Html.LabelFor(m => m.StringMatching)
            @Html.CheckBoxFor(m => m.StringMatching)

            @Html.LabelFor(m => m.CitationAnalysis)
            @Html.CheckBoxFor(m => m.CitationAnalysis)

            @Html.LabelFor(m => m.Fingerprinting)
            @Html.CheckBoxFor(m => m.Fingerprinting)

        </div>
    </div>
    <div class="form-group">
        <input class="btn btn-default" type="submit" value="Start" />
    </div>
}