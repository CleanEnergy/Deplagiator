@model List<Author>
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/TotalTable.css" rel="stylesheet" />
<h2>Existing authors</h2>

<div class="table-responsive">
    <table class="table table-hover total-table">
        <thead>
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th></th>
            </tr>
            <tr class="filters-row"></tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].FirstName</td>
                    <td>@Model[i].LastName</td>
                    <td><a href="/References/ByAuthor?authorId=@Model[i].Id" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-search"></span></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/TotalTable.js"></script>
<script>
    initializeFiltering(3, [
        { index: 0, styleClassNames: ['table-search-md'], cellClassNames: ['table-search-align-left'] },
        { index: 1, styleClassNames: ['table-search-md'], cellClassNames: ['table-search-align-left'] }
    ]);
</script>